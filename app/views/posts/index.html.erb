
<p id="notice"><%= notice %></p>  

<h2>Find friends for your unforgettable trip!<br>
  <span style="font-size: 12px;">*Click title to check the detail*</span>
</h2>


<section>  
  <table rules="rows" style="width: 100%;">
    <thead>
      <tr align="left">
        <th>Submitter</th>
        <th>Title</th>
        <th></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @posts.reverse_each do |post| %>
        <tr>
          <td style="width: 30%; height: 30px;"><%= link_to post.user.nickname, "/users/#{post.user_id}" %></td>
          <td style="width: 40%;"><%= link_to post.title, post_path(post) %></td>
          <td align="right" style="width: 30%;"><%= post.created_at.strftime("%Y/%m/%d")%></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>

